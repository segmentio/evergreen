{
  "name": "evergreen-ui",
  "version": "4.15.0",
  "description": "ðŸŒ² React UI Kit by Segment ðŸŒ²",
  "contributors": [
    "Jeroen Ransijn (https://jssr.design/)",
    "Roland Warmerdam (https://roland.codes)",
    "Matt Shwery (https://mattshwery.com)"
  ],
  "keywords": [
    "evergreen",
    "segment",
    "ui",
    "react"
  ],
  "repository": "segmentio/evergreen",
  "license": "MIT",
  "main": "commonjs/index.js",
  "module": "esm/index.js",
  "files": [
    "commonjs",
    "esm",
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "xo && ava && yarn type-check",
    "prepublishOnly": "rm -rf esm commonjs && yarn run build",
    "dev": "start-storybook -p 6006",
    "create-package": "./tools/create-package.js",
    "create-package:components": "./tools/create-package-components.js",
    "build-storybook": "build-storybook -s .storybook/static -o .out",
    "build-commonjs": "BABEL_ENV=commonjs babel src --out-dir commonjs --ignore '**/stories','**/test' --source-maps inline --extensions '.js,.ts,.tsx'",
    "build-esm": "BABEL_ENV=esm babel src --out-dir esm --ignore '**/stories','**/test' --source-maps inline --extensions '.js,.ts,.tsx'",
    "build": "concurrently --names 'commonjs,esm,types' 'yarn run build-commonjs' 'yarn run build-esm' 'yarn run build-types'",
    "build-types": "tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "clean": "git clean -Xdf",
    "release": "np",
    "deploy-docs": "cd docs && yarn install && yarn deploy",
    "postpublish": "yarn deploy-docs",
    "chromatic": "chromatic test --storybook-addon --script-name dev --app-code=alj8xoz1ujt"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "@blueprintjs/icons": "^3.2.0",
    "arrify": "^1.0.1",
    "classnames": "^2.2.6",
    "dom-helpers": "^3.2.1",
    "downshift": "^1.31.16",
    "fuzzaldrin-plus": "^0.6.0",
    "glamor": "^2.20.40",
    "lodash.debounce": "^4.0.8",
    "prop-types": "^15.6.2",
    "react-tiny-virtual-list": "^2.1.4",
    "react-transition-group": "^2.5.0",
    "tinycolor2": "^1.4.1",
    "ui-box": "^2.0.0"
  },
  "peerDependencies": {
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.0.0",
    "@reactions/component": "^2.0.2",
    "@storybook/addon-actions": "^4.0.0",
    "@storybook/addon-links": "^4.0.0",
    "@storybook/addon-options": "^4.0.0",
    "@storybook/addons": "^4.0.0",
    "@storybook/react": "^4.0.0",
    "@types/react": "^16.8.15",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "ava": "^1.3.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-add-react-displayname": "^0.0.5",
    "babel-plugin-typescript-to-proptypes": "^0.17.1",
    "concurrently": "^4.0.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-config-xo-typescript": "^0.10.1",
    "eslint-plugin-react": "^7.11.1",
    "execa": "^1.0.0",
    "faker": "^4.1.0",
    "file-loader": "^2.0.0",
    "fs-extra": "^7.0.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "np": "^4.0.2",
    "prettier": "^1.14.3",
    "react": "^16.5.2",
    "react-chromatic": "^0.8.4",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-dom": "^16.5.2",
    "react-test-renderer": "^16.5.2",
    "sinon": "^7.0.0",
    "size-limit": "^0.21.1",
    "starwars-names": "^1.6.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "url-loader": "^1.1.2",
    "webpack": "^4.30.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "xo-react",
      "xo-typescript",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "extensions": [
      "ts",
      "tsx"
    ],
    "ignores": [
      "docs",
      "tools",
      "esm",
      "commonjs",
      "generated",
      ".out",
      "*.d.ts"
    ],
    "envs": [
      "browser"
    ],
    "space": true,
    "semicolon": false,
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "off"
      ],
      "@typescript-eslint/generic-type-naming": [
        "off"
      ],
      "@typescript-eslint/indent": [
        "off"
      ],
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none",
            "requireLast": false
          },
          "singleline": {
            "delimiter": "none",
            "requireLast": false
          }
        },
        2
      ],
      "@typescript-eslint/restrict-plus-operands": [
        "off"
      ],
      "indent": [
        "off"
      ],
      "react/jsx-indent-props": [
        "off"
      ],
      "react/jsx-indent": [
        "off"
      ],
      "react/no-unused-prop-types": [
        "off"
      ],
      "react/require-default-props": [
        "off"
      ],
      "react/default-props-match-prop-types": [
        "off"
      ],
      "react/forbid-component-props": [
        "off"
      ],
      "react/jsx-no-bind": [
        "off"
      ],
      "react/jsx-sort-props": [
        "off"
      ],
      "unicorn/filename-case": [
        "off"
      ],
      "unicorn/catch-error-name": [
        "off"
      ]
    },
    "settings": {
      "react": {
        "version": "^16.3.0"
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "docs/**/*.js": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,ts,tsx}": [
      "xo --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "ava": {
    "files": [
      "**/test/**/*.{js,ts,tsx}"
    ],
    "extensions": [
      "ts",
      "tsx"
    ],
    "compileEnhancements": false,
    "require": [
      "@babel/register",
      "ts-node/register/transpile-only",
      "./tools/test-setup"
    ]
  },
  "size-limit": [
    {
      "path": "commonjs/index.js",
      "limit": "204 KB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
