{
  "name": "evergreen-ui",
  "version": "5.0.0-1",
  "description": "ðŸŒ² React UI Kit by Segment ðŸŒ²",
  "contributors": [
    "Jeroen Ransijn (https://jssr.design/)",
    "Roland Warmerdam (https://roland.codes)",
    "Matt Shwery (https://mattshwery.com)"
  ],
  "keywords": [
    "evergreen",
    "segment",
    "ui",
    "react"
  ],
  "repository": "segmentio/evergreen",
  "license": "MIT",
  "main": "commonjs/index.js",
  "module": "esm/index.js",
  "unpkg": "umd/evergreen.min.js",
  "types": "index.d.ts",
  "files": [
    "commonjs",
    "esm",
    "umd",
    "index.d.ts",
    "codemods"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "xo && ava",
    "prepublishOnly": "rm -rf esm commonjs umd && yarn build",
    "dev": "start-storybook -p 6006",
    "create-package": "./tools/create-package.js",
    "create-package:components": "./tools/create-package-components.js",
    "generate-icons": "./tools/generate-icons.js",
    "build-storybook": "build-storybook",
    "build-commonjs": "BABEL_ENV=commonjs babel src --out-dir commonjs --ignore '**/stories','**/test' --source-maps inline",
    "build-esm": "BABEL_ENV=esm babel src --out-dir esm --ignore '**/stories','**/test' --source-maps inline",
    "build-umd": "rollup -c",
    "build": "yarn generate-icons && concurrently --names 'commonjs,esm,umd' 'yarn build-commonjs' 'yarn build-esm' 'yarn build-umd'",
    "size": "size-limit",
    "clean": "git clean -Xdf",
    "release": "np",
    "deploy-docs": "cd docs && yarn install && yarn deploy",
    "postpublish": "yarn git-branch-is master && yarn deploy-docs",
    "storybook": "start-storybook -p 6006"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "@storybook/theming": "^5.3.19",
    "@types/react": "^16.9.5",
    "arrify": "^1.0.1",
    "classnames": "^2.2.6",
    "dom-helpers": "^3.2.1",
    "downshift": "^5.2.0",
    "fuzzaldrin-plus": "^0.6.0",
    "glamor": "^2.20.40",
    "lodash.debounce": "^4.0.8",
    "prop-types": "^15.6.2",
    "react-scrollbar-size": "^2.0.2",
    "react-tiny-virtual-list": "^2.1.4",
    "react-transition-group": "^2.5.0",
    "tinycolor2": "^1.4.1",
    "ui-box": "^3.2.0"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@blueprintjs/icons": "^3.13.0",
    "@reactions/component": "^2.0.2",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.3.0",
    "@size-limit/preset-small-lib": "^3.0.0",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addon-options": "^3.4.11",
    "@storybook/addons": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "ava": "^1.3.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-add-react-displayname": "^0.0.5",
    "camelcase": "^5.0.0",
    "concurrently": "^4.0.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "faker": "^4.1.0",
    "file-loader": "^6.0.0",
    "fs-extra": "^7.0.0",
    "git-branch-is": "^3.1.0",
    "husky": "^4.0.10",
    "lint-staged": "^10.0.1",
    "np": "^5.2.1",
    "prettier": "^1.14.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-test-renderer": "^16.5.2",
    "rollup": "^1.29.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-terser": "^5.2.0",
    "sinon": "^8.1.0",
    "size-limit": "^4.5.0",
    "starwars-names": "^1.6.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.43.0",
    "xo": "^0.25.3"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "xo-react",
      "prettier",
      "prettier/react"
    ],
    "envs": [
      "browser"
    ],
    "ignores": [
      "codemods/"
    ],
    "space": true,
    "semicolon": false,
    "rules": {
      "indent": [
        "off"
      ],
      "react/jsx-indent-props": [
        "off"
      ],
      "react/jsx-indent": [
        "off"
      ],
      "react/require-default-props": [
        "off"
      ],
      "react/default-props-match-prop-types": [
        "off"
      ],
      "react/forbid-component-props": [
        "off"
      ],
      "react/jsx-no-bind": [
        "off"
      ],
      "react/jsx-sort-props": [
        "off"
      ],
      "unicorn/filename-case": [
        "off"
      ],
      "unicorn/prefer-node-append": [
        "off"
      ],
      "unicorn/prefer-string-slice": [
        "warn"
      ],
      "unicorn/prefer-node-remove": [
        "off"
      ],
      "unicorn/prefer-dataset": [
        "off"
      ],
      "unicorn/catch-error-name": [
        "off"
      ]
    },
    "settings": {
      "react": {
        "version": "^16.8.0"
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "!(codemods)/**/*.js": [
      "xo --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "ava": {
    "files": [
      "**/test/**/*.js"
    ],
    "require": [
      "@babel/register",
      "./tools/test-setup"
    ]
  },
  "size-limit": [
    {
      "path": "commonjs/index.js",
      "limit": "241 KB"
    },
    {
      "path": "umd/evergreen.min.js",
      "limit": "220 KB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
