{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": false,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "/commonjs",
    "/esm",
    "/docs",
    "**/test/**/*",
    "*.test.*",
    "**/stories/**/*",
    "*.stories.tsx",
    "/examples",
    "/tools"
  ]
}
