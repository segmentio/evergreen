{
  "compilerOptions": {
    "noEmit": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "declaration": true,
    "sourceMap": false,
    "removeComments": true,
    "rootDirs": ["src"],
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "types": ["jest", "node", "testing-library__jest-dom"]
  },
  "include": ["src"]
}
