{
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard",
    "prettier",
    "prettier/react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "plugins": ["react", "sort-destructure-keys"],
  "rules": {
    "space-before-function-paren": "off",
    "no-unused-vars": "error",
    "react/display-name": "off",
    "sort-destructure-keys/sort-destructure-keys": "error"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
